;; 简单的四则运算测试

;; 基本运算
(+ 1 2)           ; 应该返回 3
(- 5 2)           ; 应该返回 3
(* 3 4)           ; 应该返回 12
(/ 10 2)          ; 应该返回 5

;; 多参数运算
(+ 1 2 3 4)       ; 应该返回 10
(- 10 3 2)        ; 应该返回 5
(* 2 3 4)         ; 应该返回 24
(/ 100 2 5)       ; 应该返回 10

;; 单参数运算
(+ 42)            ; 应该返回 42
(- 5)             ; 应该返回 -5
(* 7)             ; 应该返回 7
(/ 2)             ; 应该返回 0.5

;; 无参数运算
(+)               ; 应该返回 0
(*)               ; 应该返回 1

;; 混合类型运算
(+ 1 2.5)         ; 应该返回 3.5
(* 3 2.5)         ; 应该返回 7.5
